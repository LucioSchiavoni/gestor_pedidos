generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  name String
  rol      RolUser
  notas    Nota[]  
}

enum RolUser {
  ADMIN
  USER
}

enum Estado {
  PUBLICO 
  PRIVADO
}

model Nota {
  nro_referencia Int           @id @default(autoincrement())
  titulo         String?  
  asunto String?       
  seguimiento    Seguimiento[]
  autorId        Int
  autor          User @relation(fields: [autorId], references: [id])
  estado         Estado @default(PUBLICO)
}

model Archivo {
  id           Int      @id @default(autoincrement())
  ruta         String        
  nombre       String?        
  seguimiento  Seguimiento? @relation(fields: [seguimientoId], references: [id])
  seguimientoId Int?
  carpetaId    Int?
  carpeta      Carpeta? @relation(fields: [carpetaId], references: [id])
}

model Carpeta {
  id           Int         @id @default(autoincrement())
  nombre       String
  archivos     Archivo[]
  seguimiento  Seguimiento @relation(fields: [seguimientoId], references: [id])
  seguimientoId Int
}

model Seguimiento {
  id           Int         @id @default(autoincrement())
  fecha        DateTime    @default(now())
  notaId       Int
  nota         Nota        @relation(fields: [notaId], references: [nro_referencia], onDelete: Cascade)
  archivos     Archivo[]
  carpetas     Carpeta[]
  
  @@index([notaId], map: "Seguimiento_notaId_fkey")
}

