generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  rol      RolUser
}

enum RolUser {
  ADMIN
  USER
}

//se cambio nro pedido y motivo por el titulo y observaciones
model Nota {
  nro_referencia Int           @id @default(autoincrement()) 
  titulo         String         
  observaciones  String?
  seguimiento    Seguimiento[]
  
}

model Archivo {
  id          Int           @id @default(autoincrement())
  ruta        String        
  nombre      String?        
  seguimiento Seguimiento[]
  
}

// se borro destino
model Seguimiento {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  archivoId Int   
  notaId    Int
  archivo   Archivo  @relation(fields: [archivoId], references: [id],  onDelete: Cascade)
  nota      Nota     @relation(fields: [notaId], references: [nro_referencia],  onDelete: Cascade)

  @@index([archivoId], map: "Seguimiento_archivoId_fkey")
  @@index([notaId], map: "Seguimiento_notaId_fkey")
}


