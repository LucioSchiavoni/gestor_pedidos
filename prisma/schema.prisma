generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  rol      String
}

model Nota {
  id             Int           @id @default(autoincrement())
  nro_referencia Int           @unique
  motivo         String
  nro_pedido     Int?          @unique
  estado         EstadoEnum
  observaciones  String?
  seguimiento    Seguimiento[]
}

model Archivo {
  id          Int           @id @default(autoincrement())
  ruta        String
  nombre      String?
  seguimiento Seguimiento[]
}

model Seguimiento {
  id        Int      @id @default(autoincrement())
  destino   String
  fecha     DateTime @default(now())
  archivoId Int
  notaId    Int
  archivo   Archivo  @relation(fields: [archivoId], references: [id])
  nota      Nota     @relation(fields: [notaId], references: [id])

  @@index([archivoId], map: "Seguimiento_archivoId_fkey")
  @@index([notaId], map: "Seguimiento_notaId_fkey")
}

enum EstadoEnum {
  EN_PROCESO
  EN_CURSO
  FINALIZADO
}
